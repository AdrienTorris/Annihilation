<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <ApplicationIcon />
    <StartupObject />
    <Platforms>x64</Platforms>
    <RootNamespace></RootNamespace>
    <Configurations>Debug;Release;Profile</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <BaseIntermediateOutputPath>..\Temp\</BaseIntermediateOutputPath>
    <BaseOutputPath>..\Build\</BaseOutputPath>
    <DocumentationFile></DocumentationFile>
    <DefineConstants>TRACE;DEBUG;NETCOREAPP2_0;PLATFORM_WINDOWS;ENABLE_VALIDATION</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Profile|x64'">
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <BaseIntermediateOutputPath>..\Temp\</BaseIntermediateOutputPath>
    <BaseOutputPath>..\Build\</BaseOutputPath>
    <DefineConstants>PROFILE;NETCOREAPP2_0;PLATFORM_WINDOWS</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
    <PlatformTarget>x64</PlatformTarget>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <BaseIntermediateOutputPath>..\Temp\</BaseIntermediateOutputPath>
    <BaseOutputPath>..\Build\</BaseOutputPath>
    <DefineConstants>RELEASE;NETCOREAPP2_0;PLATFORM_WINDOWS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Engine\Collections\**" />
    <EmbeddedResource Remove="Engine\Collections\**" />
    <None Remove="Engine\Collections\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Engine\Vk\Queue.cs" />
    <Compile Include="Engine\Core\Text.cs" />
    <Compile Include="Engine\Graphics\DisplayMode.cs" />
    <Compile Include="Engine\Graphics\GpuInfo.cs" />
    <Compile Include="Engine\Vk\DebugReportCallback.cs" />
    <Compile Include="Engine\Vk\Device.cs" />
    <Compile Include="Engine\Vk\Display.cs" />
    <Compile Include="Engine\Vk\Instance.cs" />
    <Compile Include="Engine\Vk\PhysicalDevice.cs" />
    <Compile Include="Engine\Vk\Surface.cs" />
    <Compile Include="Engine\Vk\Vulkan.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="SDL2.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.4.0" />
  </ItemGroup>

</Project>